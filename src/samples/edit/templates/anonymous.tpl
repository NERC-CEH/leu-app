  <div class="input-row">
    <label class="media-object pull-left icon icon-user"></label>
    <input id="user-email" name="email" type="email" placeholder="<%= t('Email') %>">
  </div>
  <div class="input-row">
    <label class="media-object pull-left icon icon-user"></label>
    <input id="user-name" name="text" type="text" placeholder="<%= t('Name') %>">
  </div>
  <div class="input-row">
    <label class="media-object pull-left icon icon-user"></label>
    <input id="user-surname" name="text" type="text" placeholder="<%= t('Surname') %>">
  </div>
  <div class="input-row">
    <label class="media-object pull-left icon icon-user"></label>
    <input id="user-phone" name="text" type="tel" placeholder="<%= t('Phone') %>">
  </div>
</div>